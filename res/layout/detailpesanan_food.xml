<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pesanan_background">

    <ImageView
        android:id="@+id/buttonBack"
        android:layout_width="101px"
        android:layout_height="101px"
        android:layout_margin="30px"
        android:src="@drawable/back"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pbold"
        android:text="Detail Pesanan"
        android:textColor="@color/black"
        android:textSize="60px"
        android:layout_marginTop="30px"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/informasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140px"
        android:padding="20px"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBack">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pbold"
            android:text="Informasi Pesanan"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="945px"
            android:layout_height="wrap_content"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:background="@drawable/pesanan_back">

            <TextView
                android:id="@+id/r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Nama Account"
                android:textSize="30px"
                android:fontFamily="@font/bregular"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/l1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/bregular"
                android:text="XI PPLG 1"
                android:textSize="30px"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/r2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/r1"
                android:text="Nomor Pesanan"
                android:textSize="30px"
                android:layout_marginTop="10px"
                android:fontFamily="@font/bregular"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/l2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/l1"
                android:layout_marginTop="10px"
                android:fontFamily="@font/bbold"
                android:text="0000001"
                android:textSize="30px"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/r3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/r2"
                android:layout_marginTop="10px"
                android:text="Waktu Pemesanan"
                android:textSize="30px"
                android:fontFamily="@font/bregular"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/l3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/l2"
                android:layout_marginTop="10px"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/bregular"
                android:text="14-11-2022"
                android:textColor="@color/black"
                android:textSize="30px" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70px"
        android:padding="20px"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/informasi">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pbold"
            android:text="Daftar Pesanan"
            android:textColor="@color/black" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="945px"
            android:layout_height="wrap_content"
            android:background="@drawable/pesanan_back"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:paddingTop="80px">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/menu1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageFood1"
                    android:layout_width="195px"
                    android:layout_height="195px"
                    android:src="@drawable/pembayaran_food_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bregular"
                    android:text="Donat Coklat"
                    android:textColor="@color/black"
                    android:textSize="32px"
                    app:layout_constraintBottom_toBottomOf="@+id/imageFood1"
                    app:layout_constraintStart_toEndOf="@id/imageFood1"
                    app:layout_constraintTop_toTopOf="@+id/imageFood1" />

                <TextView
                    android:id="@+id/textHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bregular"
                    android:text="10.000"
                    android:textColor="@color/black"
                    android:textSize="32px"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textMenu" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="30px"
                android:id="@+id/menu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/menu1"
                app:layout_constraintStart_toStartOf="@id/menu1"
                app:layout_constraintTop_toBottomOf="@id/menu1">

                <ImageView
                    android:id="@+id/imageAhli"
                    android:layout_width="195px"
                    android:layout_height="195px"
                    android:src="@drawable/pembayaran_food_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bregular"
                    android:text="Donat Strawberry"
                    android:textColor="@color/black"
                    android:textSize="32px"
                    app:layout_constraintBottom_toBottomOf="@id/imageAhli"
                    app:layout_constraintStart_toEndOf="@id/imageAhli"
                    app:layout_constraintTop_toTopOf="@+id/imageAhli" />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bregular"
                    android:text="10.000"
                    android:textColor="@color/black"
                    android:textSize="32px"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView4" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/line"
                android:layout_width="826px"
                android:layout_height="1px"
                android:layout_marginTop="60px"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/menu2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:fontFamily="@font/bregular"
                android:text="TOTAL"
                android:textColor="@color/black"
                android:textSize="34px"
                android:layout_marginBottom="40px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/line"
                app:layout_constraintTop_toBottomOf="@id/line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bregular"
                android:text="20.000"
                android:textSize="34px"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/line"
                app:layout_constraintTop_toTopOf="@+id/textView8" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="236px"
        android:background="@drawable/pesanan_footer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonKirim"
            android:layout_width="453px"
            android:layout_height="95px"
            android:layout_centerInParent="true"
            android:background="@drawable/pesanan_button"
            android:fontFamily="@font/pbold"
            android:text="Kirim"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="40px" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>